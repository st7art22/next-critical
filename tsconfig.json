{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "pretty": true,
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}