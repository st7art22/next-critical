{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "ES2017",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "exclude": ["dist", "./*.d.ts", "node_modules"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}